        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Limited Instances App" Height="200" Width="400">
    <Grid Background="#F0F0F0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Додаток запущено." FontSize="16" Foreground="#007ACC" TextAlignment="Center" Margin="20"/>
            <Button Name="ExitButton" Content="Вихід" Click="ExitButton_Click" Background="#007ACC" Foreground="White" FontSize="16" Padding="10" Margin="10" BorderBrush="Transparent" BorderThickness="2" />
        </StackPanel>
    </Grid>
</Window>

