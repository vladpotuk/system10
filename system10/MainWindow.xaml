<Window x:Class="system10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System10" Height="400" Width="600">
    <Grid Background="#F0F0F0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
            <Button Name="StartButton" Content="Start" Click="StartButton_Click" Background="#007ACC" Foreground="White" FontSize="16" Padding="10" Margin="10" BorderBrush="Transparent" BorderThickness="2" />
            <TextBox Name="OutputTextBox" Height="300" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Background="White" Foreground="#333333" FontSize="14" Padding="10" Margin="10" BorderBrush="#B0B0B0" BorderThickness="1" />
        </StackPanel>
    </Grid>
</Window>

